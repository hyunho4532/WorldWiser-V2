<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tourSpotsSelectViewModel"
            type="com.hyun.worldwiser.viewmodel.TourSpotsSelectViewModel" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.spots.SpotsDetailActivity">

        <TextView
            android:id="@+id/tv_tour_spots_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="관광지를 조회합니다!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tour_spots_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{tourSpotsSelectViewModel.tourSpotsTitle}"
            app:layout_constraintStart_toStartOf="@+id/tv_tour_spots_select"
            app:layout_constraintTop_toBottomOf="@+id/tv_tour_spots_select" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>